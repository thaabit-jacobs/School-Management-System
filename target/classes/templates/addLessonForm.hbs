</nav>

<div class="container">

    <h2>Add Lesson:</h2>
    <form action="/admin/{{adminId}}/faculties/add/lesson" method="post">

        <div class="form-group">
            <label for="selectTeacher">Select teacher: </label>
            <select class="form-control" id="selectTeacher" name="selectedTeacher" required>
                {{#facultiesList}}
                    <option>{{this}}</option>
                {{/facultiesList}}
            </select>
        </div>

        <div class="form-group">
            <label for="selecSubject">Select subject: </label>
            <select class="form-control" id="selecSubject" name="selectedSubject" required>
                {{#subjectsList}}
                    <option>{{this}}</option>
                {{/subjectsList}}
            </select>
        </div>

        <div class="form-group">
            <label for="adminLastName">Lesson date andtime: </label>
            <input type="datetime-local" class="form-control" id="lessonTime" name="selectedTime" required></input>
        </div>

        <button role="button" class="btn btn-outline-primary btn-lg mt-2">submit</button>
    </form>
</div>









<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
